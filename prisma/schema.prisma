generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model practice_sessions {
  id               Int       @id @default(autoincrement())
  song_id          Int
  duration_minutes Int
  current_bpm      Int?
  notes            String?   @db.Text
  practiced_at     DateTime? @default(now()) @db.Timestamp(0)
  songs            songs     @relation(fields: [song_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "practice_sessions_ibfk_1")

  @@index([song_id], map: "song_id")
}

model songs {
  id                Int                 @id @default(autoincrement())
  user_id           Int
  title             String              @db.VarChar(100)
  artist            String?             @db.VarChar(100)
  target_bpm        Int?                @default(0)
  youtube_url       String?             @db.VarChar(255)
  status            songs_status?       @default(PRACTICING)
  instruments       song_instruments[]
  created_at        DateTime?           @default(now()) @db.Timestamp(0)
  practice_sessions practice_sessions[]
  users             users               @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "songs_ibfk_1")

  @@index([user_id], map: "user_id")
}

model song_instruments {
  id         Int    @id @default(autoincrement())
  song_id    Int
  // instrument String @db.VarChar(50) // 樂器名稱 (如: Guitar, Bass)
  defined_instrument_id Int
  progress   Int    @default(0)     // 進度百分比 (0-100)
  
  // 關聯回 songs
  songs      songs  @relation(fields: [song_id], references: [id], onDelete: Cascade)

  defined_instrument    defined_instruments @relation(fields: [defined_instrument_id], references: [id])

  @@index([song_id], map: "song_id")
  @@index([defined_instrument_id], map: "defined_instrument_id") // 加個索引查比較快
}

model users {
  id            Int       @id @default(autoincrement())
  username      String    @db.VarChar(50)
  email         String    @unique(map: "email") @db.VarChar(100)
  password_hash String    @db.VarChar(255)
  created_at    DateTime? @default(now()) @db.Timestamp(0)
  songs         songs[]
}

model defined_instruments {
  id               Int                @id @default(autoincrement())
  name             String             @unique @db.VarChar(50) // 必須唯一，不能有兩個 Guitar
  
  // 關聯回 song_instruments
  song_instruments song_instruments[]
}

enum songs_status {
  WANT_TO_PLAY
  PRACTICING
  MASTERED
  ARCHIVED
}
